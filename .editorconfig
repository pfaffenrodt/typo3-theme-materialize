# EditorConfig: http://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JSON-Files
[*.json]
indent_size = 2

[composer.json]
indent_size = 4

[package.json]
indent_size = 2

[bower.json]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

# JS-Files
[*.js]
indent_size = 4


# PHP-Files
[*.php]
indent_style = space
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

# YAML
[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

# TypoScript
[*.ts]
indent_size = 2

# XLF-Files
[*.xlf]
indent_size = 4

# SQL-Files
[*.sql]
indent_size = 2

# ReST-Files
[*.rst]
indent_size = 3
